{
	"name": "client",
	"version": "0.0.1",
	"scripts": {
		"start:dev": "vite dev",
		"start:build": "vite build",
		"start:preview": "vite preview",
		"start:test": "npm run test:integration && npm run test:unit",
		"start:check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"start:check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"start:lint": "prettier --check . && eslint .",
		"start:format": "prettier --write .",
		"start:test:integration": "playwright test",
		"start:test:unit": "vitest"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^5.0.0",
		"@neoconfetti/svelte": "^2.0.0",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^9.6.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3",
		"vitest": "^2.0.0"
	},
	"type": "module",
	"dependencies": {
		"less": "^4.2.0",
		"sanitize.css": "^13.0.0"
	}
